
@{
    ViewData["Title"] = "Enter the Movie";
}

@model Joel_Hilton_Film_Collection.Models.EnterMovies

<h1>Enter the Movie information Please</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>

        <label asp-for="Title">Title: </label>
        <input asp-for="Title" />
        <br />

        <label asp-for="Director">Director: </label>
        <input asp-for="Director" />
        <br />

        <label asp-for="Year">Year: </label>
        <input asp-for="Year" />
        <br />

        <label asp-for="CategoryID"> Category: </label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Categories C in ViewBag.Categories)
            {
                <option value="@C.CategoryID">@C.Category</option>
            }
        </select>
        <br />

        <label asp-for="Rating">Rating: </label>
        <select asp-for="Rating">
            <option value="">Please enter a rating</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent Out? </label>
        <select asp-for="LentTo">
            <option value="">Please indicate if this has been lent out</option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />
        <label asp-for="Edited">Edited? </label>
        <select asp-for="Edited">
            <option value="">Is this edited?</option>
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <br />

        <label asp-for="Notes">Notes: </label>
        <input asp-for="Notes" maxlength="25" />
        <br />

        <button type="submit">Submit Movie</button>
    </form>
</div>